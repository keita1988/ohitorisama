<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @tweet.store_name%>
      </p>
      <%= link_to @tweet.user.nickname, root_path, class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @tweet.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_tweet_path, class: :prototype__btn %>
          <%= link_to "削除する", tweet_path, method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="tweet__image">
        <%= image_tag @tweet.image, class: :card_img %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">コーヒー一杯の値段</p>
          <p class="detail__message">
            <%= @tweet.coffee_price %>円
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">美味しさ度</p>
          <p class="detail__message">
            <%= @tweet.tasty.name %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">リラックス度</p>
          <p class="detail__message">
            <%= @tweet.relaxation.name %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">アンダーグラウン度</p>
          <p class="detail__message">
            <%= @tweet.under_ground.name %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title">住所</p>
          <p class="detail__message">
            <%= @tweet.address %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <% if current_user %>
          <%= form_with model: [@tweet, @comment], local: true do |f|%>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text %>
            </div>
            <div class="actions">
               <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %> 
        <% end %>
        <ul class="comments_lists">
          <% if @comments %>
            <% @comments.each do |comment| %>
              <li class="comments_list">
                <%= comment.text %>
                <%= link_to comment.user.nickname, user_path(comment.user.id), class: :comment_user %>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
